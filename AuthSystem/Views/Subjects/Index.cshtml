@model IEnumerable<AuthSystem.Models.Subject>

<h1>Subjects</h1>

<a asp-action="Create" class="btn btn-primary">Add Subject</a>

<table class="table">
    <thead>
        <tr>
            <th>Subject Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.SubjectName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@subject.SubjectId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@subject.SubjectId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

