@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-container">
    <img src="~/images/Homepage.jpg" alt="Hero Image" class="hero-image" />
    <div class="hero-text">
        <h1>Welcome to Sheffield International</h1>
        <p>Empowering Global Learning, Shaping Future Leaders</p>
    </div>
</div>

<div class="text-center mt-5">
    <h2>Our Services</h2>
    <p>Explore the wide range of services we offer to ensure quality education and growth for every student.</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/service1.jpg" class="card-img-top" alt="Service 1">
                <div class="card-body">
                    <h5 class="card-title">Quality Education Programs</h5>
                    <p class="card-text">Offering a wide range of academic programs from primary to secondary education, focusing on global standards and personalized learning.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <img src="~/images/service2.jpg" class="card-img-top" alt="Service 2">
                <div class="card-body">
                    <h5 class="card-title">Extracurricular Activities</h5>
                    <p class="card-text">Providing students with opportunities to participate in a variety of clubs, sports, and arts programs, helping them develop leadership, creativity, and teamwork skills.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <img src="~/images/service3.jpg" class="card-img-top" alt="Service 3">
                <div class="card-body">
                    <h5 class="card-title">Language and Cultural Exchange Programs</h5>
                    <p class="card-text">Offering immersive programs to help students experience different cultures and languages, preparing them for a globalized world.</p>
                </div>
            </div>
        </div>
    </div>
</div>


