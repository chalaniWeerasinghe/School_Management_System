<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.webp" alt="Logo" class="me-2" style="height: 40px; width: auto;">
                    Sheffield International
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>

                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Teacher Dashboard
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Students" asp-action="Index">Students</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Subjects" asp-action="Index">Subjects</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Marks" asp-action="Index">Marks</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Students" asp-action="AssignSubjects">Assign Subjects</a>
                                    </li>

                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Dashboard
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Students" asp-action="Index">Students</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Teachers" asp-action="Index">Teachers</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Subjects" asp-action="Index">Subjects</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Marks" asp-action="Index">Marks</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Students" asp-action="AssignSubjects">Assign Subjects</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Student Dashboard
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Students" asp-action="Profile">Profile</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Marks" asp-action="MyMarks">My Marks</a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <partial name="_LoginPartial.cshtml" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AuthSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
   
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
